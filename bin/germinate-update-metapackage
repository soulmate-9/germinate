import sys

try:
    import imp
    imp.find_module('germinate.germinator')
except ImportError:
    # Running from build tree?
    import os
    sys.path.insert(0, os.path.join(sys.path[0], os.pardir))

from germinate.scripts.germinate_update_metapackage import main

if __name__ == "__main__":
    main(sys.argv)
